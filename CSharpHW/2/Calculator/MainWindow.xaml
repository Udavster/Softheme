        <Button x:Name="calculateButton" Content="Calculate" HorizontalAlignment="Left" Height="30" Margin="285,119,0,0" VerticalAlignment="Top" Width="225" Click="calculateButton_Click"/>
        <Button x:Name="seeFullResult" Content="See Full" HorizontalAlignment="Left" Height="35" Margin="435,10,0,0" VerticalAlignment="Top" Width="75" Click="seeFullResult_Click"/>

    </Grid>
</Window>
