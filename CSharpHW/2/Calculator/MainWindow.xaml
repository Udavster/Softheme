        Title="MainWindow" Height="203.881" Width="517.09" MaxWidth="535" MinWidth="535">
    <Grid Width="530" MaxWidth="520" MinWidth="520" HorizontalAlignment="Left" Margin="0,0,-3,-21" Height="194" VerticalAlignment="Top">
        <Label x:Name="ResultsLabel" Padding="10,7,0,10" Content="0" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" VerticalAlignment="Top" Width="500" BorderBrush="#FFA48F8F" BorderThickness="2" Background="#80E0D9DA" />
        <TextBox x:Name="leftArgument" Padding="10,7,0,10" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="35" Margin="10,67,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="225" RenderTransformOrigin="0.683,2.73"/>
